record(waveform, "$(DEVICE):CBUF$(CAV):TIME")
{
    field(DESC, "Circular buffer for time for Cav$(CAV)")
    field(DTYP, "$(DTYP)")
    field(INP,  "@asyn($(PORT), 0) fltBuf_time_cav$(CAV)")
    field(SCAN, "I/O Intr")
    field(FTVL, "$(FTVL)")
    field(NELM, "$(NELM)")
    field(TSE,  "$(TSE)")
}


