record(waveform, "$(DEVICE):CBUF$(CAV)$(P):PHASE")
{
    field(DESC, "Circular buffer for phase Cav$(CAV) Probe$(P)")
    field(DTYP, "$(DTYP)")
    field(INP,  "@asyn($(PORT), 0) fltBuf_phase_cav$(CAV)P$(P)")
    field(SCAN, "I/O Intr")
    field(FTVL, "$(FTVL)")
    field(NELM, "$(NELM)")
    field(TSE,  "$(TSE)")
}


