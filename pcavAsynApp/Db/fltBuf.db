record(waveform, "$(DEVICE):CBUF:PID")
{
    field(DESC, "Circular buffer for pulseid")
    field(DTYP, "$(DTYP)")
    field(INP,  "@asyn($(PORT), 0) fltBuf_pulseid")
    field(SCAN, "I/O Intr")
    field(FTVL, "$(FTVL)")
    field(NELM, "$(NELM)")
    field(TSE,  "$(TSE)")
}

record(ao, "$(DEVICE):CBUF:THREDTIME")
{
    field(PINI, "YES")
    field(DESC, "Threshold Time Jump")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn($(PORT),0) thredtime_fltbuf")
    field(SCAN, "Passive")
    field(OMSL, "supervisory")
    field(EGU,  "ps")
    info(autosaveFields, "VAL")
}

record(bo, "$(DEVICE):CBUF:CLEAR")
{
    field(DESC, "Clear circular buffers")
