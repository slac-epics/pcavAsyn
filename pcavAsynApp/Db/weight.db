
#
# Weight Configuration
#
record(longout, "$(DEVICE):CAV$(CAV)PRB$(PRB)WEIGHT")
{
    field(PINI, "YES")
    field(DESC, "Weight for Cav$(CAV)Prb$(PRB)")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),0) cav$(CAV)prb$(PRB)Weight")
    field(SCAN, "Passive")
    field(OMSL, "supervisory")
    info(autosaveFields, "VAL")
}

#
# Weight Configuration
#
record(longin,  "$(DEVICE):CAV$(CAV)PRB$(PRB)WEIGHTRBV")
{
    field(DESC, "Weight RBV for Cav$(CAV)Prb$(PRB)")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT),0) cav$(CAV)prb$(PRB)WeightRBV")
    field(SCAN, "1 second")
}
